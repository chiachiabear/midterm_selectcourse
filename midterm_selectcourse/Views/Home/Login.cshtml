
@{
    ViewBag.Title = "Login";
}
<link href="~/Content/Login.css" rel="stylesheet" type="text/css"/>

<body>
    <h2>Login</h2>
    <br />
    <form method="post" action="/Home/Login">
        <div class="form-group row">
            <label for="inputAccount" class="col-sm-2">帳號</label>
            <div class="col-sm-10">
                <input type="text" id="inputAccount" name="Account_number" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label for="inputSecretCode" class="col-sm-2">密碼</label>
            <div class="col-sm-10">
                <input type="password" id="inputSecretCode" name="Secret_code" class="form-control" />
            </div>
        </div>

        <input class="btn btn-default" type="submit" value="登入" />
    </form>
</body>

<div class="image-container">
    <img class="image_fish" src="~/Content/images/修無邊線鯨魚.png" alt="image-description">
</div>

